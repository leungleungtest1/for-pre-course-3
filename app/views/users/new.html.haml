%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      %h1 Register
      = form_for @user  do |f|
        = f.label :Email_Address
        = f.text_field :email
        %br
        = f.label :Password
        = f.password_field :password
        %br
        = f.label :Full_name
        = f.text_field :name
        %br
        = f.submit "Sign Up"

