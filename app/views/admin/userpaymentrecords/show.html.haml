%section.admin_payments
  .container
    .row
      .col-sm-10.col-sm-offset-1
        %section.payment_history
          %ul.nav.nav-tabs
            %li.active
              %a(href="") Recent Payments
            %li
              %a(href="/admin/add_video") Add a New Video
          %table.table
            %thead
              %tr
                %th Name
                %th Email
                %th Amount
                %th Reference ID
            %tbody
              - @payments.all.each do |payment|
                %tr
                  %td= payment.user.name
                  %td= payment.user.email
                  %td= payment.amount_in_dollars
                  %td= payment.reference_id